<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tom.MemThread.ThreadActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狂建线程"
            />
        <TextView
            android:id="@+id/numThread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="狂开线程 0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startThreadWithMem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建线程并开辟非堆内存" />
        <TextView
            android:id="@+id/memThreadNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线程数目 0" />
    </LinearLayout>

    <TextView
        android:id="@+id/meminfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MemInfo" />

</LinearLayout>
